<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonGetItems"
        android:layout_toRightOf="@+id/buttonGetItems"
        android:background="@color/colorPrimary"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/presRecyclerView"
        android:layout_below="@+id/searchView" />

    <include android:id="@+id/buttons_layout"
        layout="@layout/buttons_layout"/>

    <Button
        android:id="@+id/buttonGetItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/get_items_label"
        android:visibility="gone"
        android:background="@drawable/roundrect_b"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="15dp"
        android:onClick="onClickGetItems"/>



</RelativeLayout>

