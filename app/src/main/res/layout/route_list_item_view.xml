<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="5dp"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:padding="5dp">
                <CheckBox
                    android:id="@+id/trade_point_is_done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp" />
                <ImageView android:id="@+id/trade_point_clock"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_clock"
                    android:layout_alignParentBottom="true" />
                <TextView
                    android:id="@+id/trade_point_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14:15"
                    android:textSize="12sp"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/trade_point_clock"
                    android:layout_toEndOf="@+id/trade_point_clock" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">
                <TextView
                    android:id="@+id/trade_point_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="trade_point_name"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/trade_point_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/trade_point_name"
                    android:text="trade_point_description" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>